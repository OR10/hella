<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/command.xml"/>
        <import resource="services/controller.xml"/>
        <import resource="services/database_facades.xml"/>
    </imports>

    <services>
        <service id="annostation.labeling_api.event_listener.response_serializer" class="AppBundle\EventListener\ResponseSerializer">
            <argument type="service" id="fos_rest.view_handler" />
            <argument type="service" id="jms_serializer" />
            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" priority="100" />
        </service>

        <service id="annostation.labeling_api.service.video.meta_data_reader" class="AppBundle\Service\Video\MetaDataReader">
            <argument>%ffprobe_executable%</argument>
        </service>

        <service id="annostation.labeling_api.service.frame_cdn" class="AppBundle\Service\FrameCdn">
        </service>

        <service id="annostation.labeling_api.service.frame_cdn.filesystem" class="AppBundle\Service\FilesystemFrameCdn">
            <argument>%frame_cdn_dir%</argument>
            <argument>%frame_cdn_base_url%</argument>
        </service>

        <service id="annostation.labeling_api.service.video.video_frame_splitter" class="AppBundle\Service\Video\VideoFrameSplitter">
            <argument type="service" id="annostation.labeling_api.service.frame_cdn.filesystem" />
            <argument>%ffmpeg_executable%</argument>
            <argument>%cache_dir%</argument>
        </service>

        <service id="annostation.labeling_api.service.importer_service" class="AppBundle\Service\ImporterService">
            <argument type="service" id="annostation.labeling_api.database.facade.video" />
            <argument type="service" id="annostation.labeling_api.database.facade.labeling_task" />
            <argument type="service" id="annostation.labeling_api.service.video.meta_data_reader" />
            <argument type="service" id="annostation.labeling_api.service.video.video_frame_splitter" />
        </service>
    </services>
</container>
