<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/command.xml"/>
        <import resource="services/controller.xml"/>
        <import resource="services/database_facades.xml"/>
        <import resource="services/param_converters.xml"/>
        <import resource="services/interpolation_algorithms.xml"/>
        <import resource="services/worker.xml"/>
    </imports>

    <services>
        <service id="annostation.labeling_api.event_listener.response_serializer" class="AppBundle\EventListener\ResponseSerializer">
            <argument type="service" id="fos_rest.view_handler" />
            <argument type="service" id="jms_serializer" />
            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" priority="100" />
        </service>

        <service id="annostation.labeling_api.annotations.driver.close_session" class="AppBundle\Annotations\Driver\CloseSession">
            <argument type="service" id="annotation_reader" />
            <argument type="service" id="session" />
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>

        <service id="annostation.labeling_api.annotations.driver.forbid_readonly_tasks" class="AppBundle\Annotations\Driver\ForbidReadonlyTasks">
            <argument type="service" id="annotation_reader" />
            <argument type="service" id="session" />
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="annostation.labeling_api.service.task_read_only_decider" />
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="-256"/>
        </service>

        <service id="annostation.labeling_api.service.video.meta_data_reader" class="AppBundle\Service\Video\MetaDataReader">
            <argument>%ffprobe_executable%</argument>
        </service>

        <service id="annostation.labeling_api.service.frame_cdn.filesystem" class="AppBundle\Service\FilesystemFrameCdn">
            <argument>%frame_cdn_base_url%</argument>
            <argument type="service" id="oneup_flysystem.frame_cdn_filesystem" />
        </service>

        <service id="annostation.labeling_api.service.video.video_frame_splitter" class="AppBundle\Service\Video\VideoFrameSplitter">
            <argument type="service" id="annostation.labeling_api.service.frame_cdn.filesystem" />
            <argument>%ffmpeg_executable%</argument>
            <argument type="service" id="oneup_flysystem.cache_filesystem"/>
        </service>

        <service id="annostation.labeling_api.service.task_read_only_decider" class="AppBundle\Service\TaskReadOnlyDecider">
            <argument type="service" id="annostation.labeling_api.database.facade.user" />
        </service>

        <service id="annostation.labeling_api.service.video_importer" class="AppBundle\Service\VideoImporter">
            <argument type="service" id="annostation.labeling_api.database.facade.video" />
            <argument type="service" id="annostation.labeling_api.database.facade.labeling_task" />
            <argument type="service" id="annostation.labeling_api.service.video.meta_data_reader" />
            <argument type="service" id="annostation.labeling_api.service.video.video_frame_splitter" />
            <argument type="service" id="annostation.labeling_api.vendor.worker_pool.amqp" />
        </service>

        <service id="annostation.labeling_api.authentication_handler" class="AppBundle\AuthenticationHandler">
        </service>

        <service id="annostation.labeling_api.service.task_exporter.kitti" class="AppBundle\Service\TaskExporter\Kitti">
            <argument type="service" id="annostation.labeling_api.database.facade.labeling_task" />
            <argument type="service" id="annostation.labeling_api.database.facade.labeled_thing" />
            <argument type="service" id="annostation.labeling_api.database.facade.labeled_thing_in_frame" />
            <argument type="service" id="annostation.labeling_api.database.facade.task_export" />
        </service>

        <service id="annostation.labeling_api.vendor.logger" class="cscntLogger" />

        <service id="annostation.labeling_api.vendor.worker_pool.amqp" class="crosscan\WorkerPool\AMQP\FacadeAMQP">
            <argument type="service" id="annostation.labeling_api.service.amqp_pool_config" />
            <argument type="service" id="annostation.labeling_api.vendor.logger" />
        </service>

        <service id="annostation.labeling_api.service.amqp_pool_config" class="AppBundle\Service\AmqpPoolConfig">
            <argument>%rabbitmq_host%</argument>
            <argument>%rabbitmq_port%</argument>
            <argument>%rabbitmq_vhost%</argument>
            <argument>%rabbitmq_user%</argument>
            <argument>%rabbitmq_password%</argument>
            <argument>%rabbitmq_use_dead_letter_exchange%</argument>
            <argument>%rabbitmq_use_alternate_exchange%</argument>
        </service>

        <service id="annostation.labeling_api.service.interpolation" class="AppBundle\Service\Interpolation">
            <argument type="service" id="annostation.labeling_api.database.facade.labeled_thing_in_frame" />
            <argument type="service" id="annostation.labeling_api.database.facade.status" />
        </service>

        <service id="annostation.labeling_api.view.serialization_listener"
                 class="AppBundle\Service\View\LabelingTaskSerializationSubscriber">
            <tag name="jms_serializer.event_subscriber"/>
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="annostation.labeling_api.service.task_read_only_decider"/>
        </service>

        <service id="annostation.labeling_api.service.task_incomplete" class="AppBundle\Service\TaskIncomplete">
            <argument type="service" id="annostation.labeling_api.database.facade.labeling_task" />
            <argument type="service" id="annostation.labeling_api.database.facade.labeled_thing" />
            <argument type="service" id="annostation.labeling_api.database.facade.labeled_thing_in_frame" />
        </service>
    </services>
</container>
