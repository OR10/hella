{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            {% if error is defined %}
                <div class="col-md-12">
                    <div class="alert alert-danger" role="alert">{{ error }}</div>
                </div>
            {% endif %}

            {% if taskIds is defined %}
                <div class="col-md-12">
                    {% for taskId in taskIds %}
                        <div class="alert alert-success" role="alert">Task angelegt: {{ taskId }}</div>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="col-xs-12 col-md-8 col-md-offset-2">
                <h1>Upload new video</h1>

                <form method="post" action="/upload" enctype="multipart/form-data" class="horizontal-form">
                    <div class="form-group">
                        <label for="file" class="col-xs-3">Video File</label>
                        <div class="col-xs-9">
                            <input type="file" id="file" name="file" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="file" class="col-xs-3">Calibration File</label>
                        <div class="col-xs-9">
                            <input type="file" id="calibrationFile" name="calibrationFile" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="file" class="col-xs-3">Project</label>
                        <div class="col-xs-9">
                            <input type="text" name="project" list="projectNames" style="width: 100%"/>
                            <datalist id="projectNames">
                                {% for projectName in projectNames %}
                                    <option value="{{ projectName }}">{{ projectName }}</option>
                                {% endfor %}
                            </datalist>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="splitLength" class="col-xs-3">Split each</label>
                        <div class="col-xs-9">
                            <input type="number" name="splitLength" value="0" min="0" step="1" style="text-align:right" /> seconds
                        </div>
                    </div>

                    <div class="form-group">
                    <label for="frameStepSize" class="col-xs-3">Frame step size</label>
                        <div class="col-xs-9">
                            <input type="number" name="frameStepSize" value="22" min="1" step="1" style="text-align:right" /> frame(s)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="startFrame" class="col-xs-3">Start frame</label>
                        <div class="col-xs-9">
                            <input type="number" name="startFrame" value="22" min="1" step="1" style="text-align:right" /> frame
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="objectLabelingType" class="col-xs-3">Object-Labeling type</label>
                        <div class="col-xs-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="object-labeling" value="1" checked/>
                                    Object-Labeling
                                </label>
                                <label>
                                    <input type="checkbox" name="meta-labeling" value="1"/>
                                    Meta-Labeling
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="overflow" class="col-xs-3">Overflow Control</label>
                        <div class="col-xs-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="overflow" value="1" checked/>
                                    Allow shapes to overflow
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="LabelingInstruction" class="col-xs-3">Labeling instruction</label>
                        <div class="col-xs-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="vehicle" value="1" checked/>
                                    Vehicle
                                </label>
                                <select name="drawingToolVehicle" class="form-control">
                                    <option value="rectangle">Normal Rectangle</option>
                                    <option value="pedestrian">Pedestrian (Fixed-Aspect, Center-Line)</option>
                                    <option value="cuboid" selected>3D</option>
                                </select>

                                <label>
                                    <input type="checkbox" name="ignore-vehicle" value="1" checked/>
                                    Ignore-Vehicle
                                </label>
                                <select name="drawingToolIgnoreVehicle" class="form-control">
                                    <option value="rectangle" selected>Normal Rectangle</option>
                                    <option value="pedestrian">Pedestrian (Fixed-Aspect, Center-Line)</option>
                                    <option value="cuboid">3D</option>
                                </select>
                                <br /><br />
                                <label>
                                    <input type="checkbox" name="lane" value="1" checked/>
                                    Lane
                                </label>
                                <select name="drawingToolLane" class="form-control">
                                    <option value="rectangle" selected>Normal Rectangle</option>
                                </select>
                                <br /><br />
                                <label>
                                    <input type="checkbox" name="person" value="1"/>
                                    Person
                                </label>
                                <select name="drawingToolPerson" class="form-control">
                                    <option value="rectangle">Normal Rectangle</option>
                                    <option value="pedestrian" selected>Pedestrian (Fixed-Aspect, Center-Line)</option>
                                    <option value="cuboid">3D</option>
                                </select>
                                <label>
                                    <input type="checkbox" name="cyclist" value="1"/>
                                    Cyclist
                                </label>
                                <select name="drawingToolCyclist" class="form-control">
                                    <option value="rectangle" selected>Normal Rectangle</option>
                                    <option value="pedestrian">Pedestrian (Fixed-Aspect, Center-Line)</option>
                                    <option value="cuboid">3D</option>
                                </select>
                                <label>
                                    <input type="checkbox" name="ignore" value="1"/>
                                    Ignore
                                </label>
                                <select name="drawingToolIgnore" class="form-control">
                                    <option value="rectangle" selected>Normal Rectangle</option>
                                    <option value="pedestrian">Pedestrian (Fixed-Aspect, Center-Line)</option>
                                    <option value="cuboid">3D</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="LabelingInstruction" class="col-xs-3">Pedestrian Drawing Options</label>
                        <div class="col-xs-9">
                            minimal height <input type="number" name="pedestrianMinimalHeight" value="22" min="0" step="1"/> px
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="LabelingInstruction" class="col-xs-3">3D Drawing Options</label>
                        <div class="col-xs-9">
                            minimal height <input type="number" name="cuboidMinimalHeight" value="15" min="0" step="1"/> px
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-offset-3 col-xs-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="lossless" value="1" />
                                    Use lossless compressed images (PNG)
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-offset-3 col-xs-9">
                            <button type="submit" class="btn btn-primary">Hochladen</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
