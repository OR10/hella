{
  "env": {
    "browser": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "indent": [2, 2],
    "comma-dangle": [2, "never"],
    "no-cond-assign": [2, "always"],
    "no-console": 2,
    "no-alert": 2,
    "quote-props": 2,

    "radix": 2,

    "brace-style":  [2, "1tbs"],
    "camelcase": 2,
    "quotes": [1, "single"],
    "comma-style": [2, "last"],
    "consistent-this": [2, "dontYouDareAliasingThis"],
    "eol-last": 1,
    "func-style": [2, "declaration"],
    "no-var": 1,
    "one-var": [2, "never"]
  },
  "globals": {
    "airbrakeJs": false
  }
}
