[httpd]
port = 5984
bind_address = <%= @couchdb_ip_address %>
<% if @cors_origins -%>
enable_cors = true
<% end -%>

[log]
level = error

<% if @cors_origins -%>
[cors]
credentials = <%= @cors_credentials %>
origins = <%= @cors_origins %>
methods = <%= @cors_methods %>
<% if @cors_headers -%>
headers = <%= @cors_headers %>
<% end -%>
<% end -%>

[couch_httpd_auth]
require_valid_user = <%= @require_valid_user %>
